<h1 align="center">All AlphaBloggers</h1>

<div align="center">
  <%= will_paginate @users, list_classes: %w(pagination justify-content-center), class:"pg-teal" %>

  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-12 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.is_admin? %>
            <li>
              <%= link_to "Delete this User", user_path(user),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete the user and all of their Articles?"}
              %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

  <%= will_paginate @users, list_classes: %w(pagination justify-content-center), class:"pg-teal" %>

</div>
