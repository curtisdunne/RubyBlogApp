<h1 align="center">Listing all Categories</h1>

<%= will_paginate @categories, list_classes: %w(pagination justify-content-center), class:"pg-teal" %>

<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row">
      <div class="card col-md-4 offset-md-4">
        <li class="category-title">
          <%= link_to "#{category.name}", category_path(category) %>
        </li>
        <li align="center"><small><%= pluralize(category.articles.count, "article") %></small></li>
      </div>
    </div>
  </ul>
<% end %>

<%= will_paginate @categories, list_classes: %w(pagination justify-content-center), class:"pg-teal" %>
